{
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../../build/main",
    "allowJs": true
  },
  "include": ["**/*"],
  "exclude": ["static"]
}
